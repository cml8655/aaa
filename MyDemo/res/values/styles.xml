<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/actionBar</item>
        <!--
		设置menu背景颜色
  		<item name="android:actionBarItemBackground">@android:color/holo_green_light</item>
        -->
        <!-- 菜单栏颜色 -->
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextAppearance">@style/menuTextAppearance</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <!-- menu字体 -->
    <style name="menuTextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="actionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <style name="TitleBgStyle">
        <item name="android:background">@android:color/holo_green_light</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="horizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#FFF</item>
    </style>

    <style name="MyTryUseDialogFragment" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_shape</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="editStyle" parent="@style/AppBaseTheme">
        <item name="android:background">@drawable/edit_view_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>