<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@android:color/holo_blue_light" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/launcher" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/default_margin"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/userinfo_account"
            style="@style/presentViewStyle"
            android:text="当前账号：XXXXXX.com" />

        <View style="@style/deviderStyle" />

        <TextView
            android:id="@+id/userinfo_point"
            style="@style/presentViewStyle"
            android:text="积分：123分" />

        <View style="@style/deviderStyle" />

        <TextView
            android:id="@+id/userinfo_device"
            style="@style/presentViewStyle"
            android:text="绑定手机：sony_l36h" />

        <View style="@style/deviderStyle" />

        <TextView
            android:id="@+id/userinfo_logout"
            style="@style/presentViewStyle"
            android:background="@color/md_red_300"
            android:gravity="center"
            android:text="@string/userinfo_logout" />
    </LinearLayout>

</LinearLayout>